# Environment Configuration for Hypnose Stammtisch Backend

# Database Configuration
DB_HOST=your-db-host
DB_PORT=3306
DB_NAME=hypnose_stammtisch
DB_USER=hypnose_user
DB_PASS=choose-a-strong-password
SETUP_TOKEN=your-setup-token
INSTALL_TOKEN=your-install-token

# Application Settings
APP_NAME=Hypnose Stammtisch
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8000
FRONTEND_URL=http://localhost:5173

# Security Settings
JWT_SECRET=generate-a-256-bit-secret
CSRF_TOKEN_NAME=csrf_token_name
SESSION_LIFETIME=28800

# Failed Login Protection Settings
MAX_FAILED_ATTEMPTS=5
TIME_WINDOW_SECONDS=900
IP_BAN_DURATION_SECONDS=3600
ACCOUNT_LOCK_DURATION_SECONDS=3600
HEAD_ADMIN_ROLE_NAME=head

# IP Validation and Proxy Settings
ALLOW_PRIVATE_IPS=false
TRUSTED_PROXIES=

# Audit Log Rate Limiting (prevents log spam during attacks)
AUDIT_UNTRUSTED_PROXY_MAX_LOGS=10
AUDIT_UNTRUSTED_PROXY_PERIOD=300

# Email Configuration (for contact forms)
MAIL_HOST=your-smtp-host
MAIL_PORT=587
MAIL_USERNAME=info@example.com
MAIL_PASSWORD=choose-a-strong-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=info@example.com
MAIL_FROM_NAME="Hypnose Stammtisch"
MAIL_SMTP_ENABLED=true

# Contact Form Recipients
CONTACT_GENERAL=info@example.com
CONTACT_EVENTS=events@example.com
CONTACT_CONDUCT=conduct@example.com
CONTACT_SUPPORT=support@example.com

# Calendar Settings
CALENDAR_TIMEZONE=Europe/Berlin
CALENDAR_FEED_TOKEN=your-calendar-feed-token

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_PATH=../uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With,X-CSRF-Token

# Head-Admin Zugangsdaten
HEAD_ADMIN_EMAIL=head@example.com
HEAD_ADMIN_PASS=choose-a-strong-password
