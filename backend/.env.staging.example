# Environment Configuration for Hypnose Stammtisch Backend - STAGING

# Database Configuration - Staging
DB_HOST=localhost
DB_PORT=3306
DB_NAME=hypnose_stammtisch_staging
DB_USER=staging_user
DB_PASS=

# Application Settings - Staging
APP_ENV=staging
APP_DEBUG=true
APP_URL=https://staging.hypnose-stammtisch.de
FRONTEND_URL=https://staging.hypnose-stammtisch.de
BASE_URL=https://staging.hypnose-stammtisch.de

# Security Settings - Staging
JWT_SECRET=your-staging-jwt-secret-change-this
CSRF_TOKEN_NAME=csrf_token
SESSION_LIFETIME=3600

# Email Configuration (for contact forms) - Staging
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=staging@hypnose-stammtisch.de
MAIL_FROM_NAME="Hypnose Stammtisch (Staging)"

# Contact Form Recipients - Staging
CONTACT_GENERAL=staging@hypnose-stammtisch.de
CONTACT_EVENTS=events-staging@hypnose-stammtisch.de
CONTACT_CONDUCT=conduct-staging@hypnose-stammtisch.de
CONTACT_SUPPORT=support-staging@hypnose-stammtisch.de

# Calendar Settings
CALENDAR_TIMEZONE=Europe/Berlin
CALENDAR_FEED_TOKEN=your-secure-staging-calendar-feed-token
CALENDAR_CACHE_DURATION=1800

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_PATH=../uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# CORS Settings - Staging
CORS_ALLOWED_ORIGINS=https://staging.hypnose-stammtisch.de
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
