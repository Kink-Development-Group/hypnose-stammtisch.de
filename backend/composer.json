{
  "name": "hypnose-stammtisch/backend",
  "description": "Backend API for Hypnose Stammtisch community calendar",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": ">=8.1",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-openssl": "*",
    "ext-pdo": "*",
    "eluceo/ical": "^2.0",
    "nesbot/carbon": "^3.11.0",
    "phpmailer/phpmailer": "^7.0.2",
    "respect/validation": "^2.2",
    "vlucas/phpdotenv": "5.6"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.5.6",
    "squizlabs/php_codesniffer": "^4.0.1",
    "phpstan/phpstan": "^2.1.33"
  },
  "autoload": {
    "psr-4": {
      "HypnoseStammtisch\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "HypnoseStammtisch\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "cs": "phpcs --standard=PSR12 src/",
    "cs-fix": "phpcbf --standard=PSR12 src/",
    "analyse": "phpstan analyse src/",
    "migrate": "php migrations/migrate.php"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
