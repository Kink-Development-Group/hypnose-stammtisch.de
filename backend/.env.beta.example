# Environment Configuration for Hypnose Stammtisch Backend - BETA

# Database Configuration - Beta
DB_HOST=localhost
DB_PORT=3306
DB_NAME=hypnose_stammtisch_beta
DB_USER=beta_user
DB_PASS=

# Application Settings - Beta
APP_ENV=beta
APP_DEBUG=true
APP_URL=https://beta.hypnose-stammtisch.de
FRONTEND_URL=https://beta.hypnose-stammtisch.de
BASE_URL=https://beta.hypnose-stammtisch.de

# Security Settings - Beta
JWT_SECRET=your-beta-jwt-secret-change-this
CSRF_TOKEN_NAME=csrf_token
SESSION_LIFETIME=3600

# Email Configuration (for contact forms) - Beta
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=beta@hypnose-stammtisch.de
MAIL_FROM_NAME="Hypnose Stammtisch (Beta)"

# Contact Form Recipients - Beta
CONTACT_GENERAL=beta@hypnose-stammtisch.de
CONTACT_EVENTS=events-beta@hypnose-stammtisch.de
CONTACT_CONDUCT=conduct-beta@hypnose-stammtisch.de
CONTACT_SUPPORT=support-beta@hypnose-stammtisch.de

# Calendar Settings
CALENDAR_TIMEZONE=Europe/Berlin
CALENDAR_FEED_TOKEN=your-secure-beta-calendar-feed-token
CALENDAR_CACHE_DURATION=1800

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_PATH=../uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# CORS Settings - Beta
CORS_ALLOWED_ORIGINS=https://beta.hypnose-stammtisch.de
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
