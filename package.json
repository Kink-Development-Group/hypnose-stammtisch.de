{
  "name": "hypnose-stammtisch.de",
  "private": true,
  "version": "1.0.0",
  "description": "Hypnose Stammtisch Community Calendar - Full Stack Application",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" --kill-others-on-fail --prefix-colors \"cyan,magenta\" --names \"Frontend,Backend\"",
    "dev:frontend": "vite",
    "dev:backend": "php -S localhost:8000 -t backend/api",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "install:backend": "cd backend; composer install",
    "setup": "npm install && npm run install:backend",
    "setup:backend": "cd backend; php migrations/migrate.php",
    "start": "npm run dev",
    "backend:migrate": "cd backend; php migrations/migrate.php",
    "backend:seed": "cd backend; php migrations/migrate.php --seed",
    "backend:status": "cd backend; composer validate; php -v",
    "frontend:status": "npm list --depth=0",
    "test": "playwright test",
    "test:a11y": "playwright test tests/accessibility.spec.ts",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.54.2",
    "@sveltejs/vite-plugin-svelte": "^6.1.0",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^24.2.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.10.3",
    "concurrently": "^8.2.2",
    "eslint": "^9.32.0",
    "eslint-plugin-svelte": "^3.11.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.37.3",
    "svelte-check": "^4.3.1",
    "tailwindcss": "^3.4.17",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "vite": "^7.0.6"
  },
  "dependencies": {
    "@fortawesome/free-solid-svg-icons": "^7.0.0",
    "dayjs": "^1.11.13",
    "dompurify": "^3.2.6",
    "ical.js": "^2.2.0",
    "marked": "^16.1.2",
    "rrule": "^2.8.1",
    "svelte-spa-router": "^4.0.1",
    "zod": "^4.0.15"
  }
}
